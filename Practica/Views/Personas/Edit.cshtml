@{
}


@using (Html.BeginForm("Edit", "Personas", FormMethod.Post, new { @class = "form-horizontal" }))
{

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">

            <div class="col-md-8">
                @Html.DisplayNameFor(x => x.Nombre)
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-8">
                @Html.DisplayNameFor(x => x.Apellido)
                @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-8">
                @Html.DisplayNameFor(x => x.Edad)
                @Html.EditorFor(model => model.Edad, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
            </div>


        </div>


        <input type="submit" value="Guardar" class="btn btn-default" />


    </div>

}




