@{
}


<h1 style="text-align:center">Lista de Personas</h1>
<hr />

<button type="button">
    <a href="@Url.Action("Create", "Personas")">Crear</a>


</button>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Edad</th>
        <th>Acciones</th>
    </tr>


    @foreach (var item in ViewBag.ListAll)
    {

        <tr>
            <td>@item.id</td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Edad</td>
            <td>
                


                <button type="button">
                    <a href="Personas/Delete/@item.id">Borrar</a>


                </button>

                <button type="button">
                    <a href="Personas/Edit/@item.id">Editar</a>


                </button>



            </td>

        </tr>


    }
</table>